{% extends 'base.html.twig' %}

{% block title %}Customers List{% endblock %}

{% block body %}
 <div class="row my-5">
    <div class ="col-mid-10 mx-auto">
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{message}}
            </div>
        {% endfor %}
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span>List of Customers</span> 
                <a href="{{path('customer_create')}}" class="btn btn-sm btn-primary">
                    Add
                </a>
            </div>
            <div class="card-body"> 
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Address</th>
                            <th>Number</th>
                            <th>Action</th>
                        </tr> 
                    </thead>
                    <tbody>
                        {% for customer in customers %}
                            <tr>
                                <td>{{customer.id}}</td>
                                <td>{{customer.name}}</td>
                                <td>{{customer.address}}</td>
                                <td>{{customer.phoneNumber}}</td>
                                <td class="d-flex justify-content-around align-items-center">
                                    
                                    <a href="{{path('customer_update',{id: customer.id})}}" class="btn btn-sm btn-warning">
                                     Edit
                                    </a>
                                    <form id="{{customer.id}}" action="{{path('customer_delete',{id: customer.id})}}"
                                        method="post"></form>
                                    <button onclick="deleteItem('{{customer.id}}')" class="btn btn-sm btn-danger">
                                     Delete
                                    </button>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
 
 </div>
{% endblock %}